<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SaveTracker.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="700"
        x:Class="SaveTracker.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="SaveTracker Desktop"
        WindowStartupLocation="CenterScreen"
        MinWidth="1280" MinHeight="600">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        
        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="10">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <Button Content="⚙️ Settings" Classes="MenuButton"/>
                    <Button Name="OpenCloudSettingsBTN" Click="OpenCloudSettingsBTN_Click" Content="☁️ Cloud Config" Classes="MenuButton"/>
                    <Button Name="BlackListBTN" Click="BlackListBTN_Click" Content="📋 Blacklist Editor" Classes="MenuButton"/>
                    <Button Name="StatisticsBTN" Click="StatisticsBTN_Click" Content="📊 Statistics" Classes="MenuButton"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="🔄 Sync Status: " VerticalAlignment="Center" Foreground="#CCCCCC"/>
                    <TextBlock Text="Idle" VerticalAlignment="Center" Foreground="#4EC9B0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" ColumnDefinitions="300,*">
            
            <!-- Left Sidebar - Game List -->
            <Border Background="#252526" BorderBrush="#3F3F46" BorderThickness="0,0,1,0">
                <Grid RowDefinitions="Auto,Auto,*,Auto">
                    
                    <!-- Search Box -->
                    <Border Grid.Row="0" Margin="10" Background="#3F3F46" CornerRadius="4">
                        <TextBox Watermark="🔍 Search games..." 
                                 Background="Transparent" 
                                 BorderThickness="0"
                                 Padding="8"/>
                    </Border>

                    <!-- Game List -->
                    <ListBox Grid.Row="2" Background="Transparent" Name="GamesList" SelectionChanged="GamesList_SelectionChanged_1" Margin="5">
                        <!-- Game items will be populated here -->
                    </ListBox>

                    <!-- Add Game Button -->
                    <Button Grid.Row="3"
                            Name="AddGameBTN"
                            Content="+ Add Game Manually" 
                            Click="AddGameBTN_Click"
                            HorizontalAlignment="Stretch" 
                            Margin="10"
                            Padding="10"/>
                </Grid>
            </Border>

            <!-- Right Content Area - Game Details -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*">
                
                <!-- Game Header -->
                <Border Grid.Row="0" Background="#2D2D30" Padding="20">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <Border Width="80" Height="80" Background="#1E1E1E" CornerRadius="8" Margin="0,0,15,0">
                            <Image Name="GameIconImage" 
                                   Width="80" 
                                   Height="80" 
                                   Stretch="Uniform"/>
                        </Border>
                        
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="5">
                            <TextBlock Name="GameTitleBox" Text="Select a game" FontSize="24" FontWeight="Bold"/>
                            <TextBlock Name="GamePAthBox" Text="No game selected" FontSize="12" Foreground="#858585"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" Spacing="8" VerticalAlignment="Center">
                            <Button Name="LaunchBTN" Click="LaunchBTN_Click" Content="▶️ Launch &amp; Track" Padding="15,8" Background="#0E639C" IsEnabled="False"/>
                            <Button Name="SyncBTN" Click="SyncBTN_Click" Content="☁️ Sync Now" Padding="15,8" IsEnabled="False"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tabs Section -->
                <TabControl Grid.Row="1" Background="#1E1E1E" Margin="0">
                    
                    <!-- Tracked Files Tab -->
                    <TabItem Header="📁 Tracked Files">
                        <Grid RowDefinitions="Auto,*,Auto">
                            
                            <!-- Action Bar -->
                            <Border Grid.Row="0" Background="#252526" Padding="15" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Button  Name="AddFileBTN" Click="AddFileBTN_Click" Content="➕ Add Files" Padding="10,6"/>
                                        <Button Name="RemoveFilesBTN" Click="RemoveFilesBTN_Click" Content="🗑️ Remove Selected" Padding="10,6"/>
                                        <Button Content="🔄 Refresh Tracking" Padding="10,6"/>
                                        <Separator Width="1" Background="#3F3F46" Margin="5,0"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                        <CheckBox Content="Auto-upload" IsChecked="True"/>
                                        <CheckBox Content="Track writes" IsChecked="True"/>
                                        <CheckBox Content="Track reads" IsChecked="False"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- File List Header -->
                            <Border Grid.Row="1" Background="#1E1E1E" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                                <Grid Margin="15,10" ColumnDefinitions="40,2*,3*,100,150,120">
                                    <TextBlock Grid.Column="0" Text="" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="1" Text="FILE NAME" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="2" Text="PATH" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="3" Text="SIZE" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="4" Text="LAST MODIFIED" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="5" Text="STATUS" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                </Grid>
                            </Border>

                            <!-- File List -->
                            <ScrollViewer Margin="0, 10, 0, 0" Grid.Row="1">
                                <StackPanel Name="GameTrackedFileList" Margin="15">
                                    <!-- File items will be populated here -->
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Summary Bar -->
                            <Border Grid.Row="2" Background="#252526" Padding="15" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Name="FilesTrackedTxt" Text="0 files tracked" Foreground="#CCCCCC"/>
                                    <TextBlock Grid.Column="1" Text="Total size: 0 B" Foreground="#858585"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Cloud Folder Tab -->
                    <TabItem Header="☁️ Cloud Folder">
                        <Grid RowDefinitions="Auto,Auto,*,Auto">
                            
                            <!-- Action Bar -->
                            <Border Grid.Row="0" Background="#252526" Padding="15" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                                <Grid ColumnDefinitions="*,Auto">
                                    <StackPanel Orientation="Horizontal" Spacing="10">
                                        <Button Name="RefreshCloudFilesBTN" Click="RefreshCloudFilesBTN_Click" Content="🔄 Refresh" Padding="10,6"/>
                                        <Button Name="DownloadSelectedFilesBTN" Click="DownloadSelectedFilesBTN_Click" Content="⬇️ Download Selected" Padding="10,6"/>
                                        <Button Content="🗑️ Delete Selected" Padding="10,6"/>
                                        <Separator Width="1" Background="#3F3F46" Margin="5,0"/>
                                        <TextBlock Text="View files stored in your cloud provider" 
                                                   VerticalAlignment="Center" 
                                                   Foreground="#858585"
                                                   FontSize="12"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                                        <TextBlock Text="Cloud Storage:" VerticalAlignment="Center" Foreground="#858585"/>
                                        <TextBlock Name="CloudStorageTXT" Text="Google Drive" VerticalAlignment="Center" Foreground="#4EC9B0" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- File List Header -->
                            <Border Grid.Row="1" Background="#1E1E1E" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                                <Grid Margin="15,10" ColumnDefinitions="40,3*,150,150,120">
                                    <TextBlock Grid.Column="0" Text="" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="1" Text="FILE NAME" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="2" Text="SIZE" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="3" Text="UPLOADED" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                    <TextBlock Grid.Column="4" Text="STATUS" FontWeight="SemiBold" FontSize="12" Foreground="#858585"/>
                                </Grid>
                            </Border>

                            <!-- Cloud File List -->
                            <ScrollViewer Grid.Row="2">
                                <StackPanel Name="CloudFileList" Margin="15">
                                    <!-- Cloud file items will be populated here -->
                                    <TextBlock Text="No files in cloud. Upload tracked files to see them here." 
                                             Foreground="#858585" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             Margin="0,50,0,0"/>
                                </StackPanel>
                            </ScrollViewer>

                            <!-- Summary Bar -->
                            <Border Grid.Row="3" Background="#252526" Padding="15" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Name="CloudFilesCountTxt" Text="0 files in cloud" Foreground="#CCCCCC"/>
                                    <TextBlock Grid.Column="1" Text="Last sync: Never" Foreground="#858585"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>

                    <!-- Configuration Tab -->
                    <TabItem Header="⚙️ Configuration">
                        <ScrollViewer>
                            <StackPanel Margin="20" Spacing="20">
                                
                                <!-- Tracking Options -->
                                <Border Background="#252526" Padding="15" CornerRadius="6">
                                    <StackPanel Spacing="12">
                                        <TextBlock Text="Tracking Options" FontSize="16" FontWeight="SemiBold"/>
                                        <CheckBox Content="Enable automatic tracking" IsChecked="True"/>
                                        <CheckBox Content="Track file writes" IsChecked="True"/>
                                        <CheckBox Content="Track file reads (may impact performance)" IsChecked="False"/>
                                        <CheckBox Content="Auto-upload on game exit" IsChecked="True"/>
                                        <Separator Background="#3F3F46" Margin="0,5"/>
                                        <StackPanel Spacing="8">
                                            <TextBlock Text="Tracking interval (seconds):" Foreground="#CCCCCC"/>
                                            <NumericUpDown Value="5" Minimum="1" Maximum="60" Width="200" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Cloud Provider -->
                                <Border Background="#252526" Padding="15" CornerRadius="6">
                                    <StackPanel Spacing="12">
                                        <TextBlock Text="Cloud Provider" FontSize="16" FontWeight="SemiBold"/>
                                        <TextBlock Text="Override global cloud provider for this game" Foreground="#858585" FontSize="12"/>
                                        <ComboBox Width="300" HorizontalAlignment="Left">
                                            <ComboBoxItem Content="Use Global Settings" IsSelected="True"/>
                                            <ComboBoxItem Content="Google Drive"/>
                                            <ComboBoxItem Content="OneDrive"/>
                                            <ComboBoxItem Content="Dropbox"/>
                                            <ComboBoxItem Content="Custom Rclone"/>
                                        </ComboBox>
                                        <Button Content="Configure Rclone" Padding="10,6" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                </Border>

                                <!-- Path Configuration -->
                                <Border Background="#252526" Padding="15" CornerRadius="6">
                                    <StackPanel Spacing="12">
                                        <TextBlock Text="Path Configuration" FontSize="16" FontWeight="SemiBold"/>
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Game install directory:" Foreground="#CCCCCC"/>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBox Watermark="No game selected" IsReadOnly="True" Background="#1E1E1E"/>
                                                <Button Grid.Column="1" Content="Browse..." Margin="5,0,0,0"/>
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Spacing="5">
                                            <TextBlock Text="Custom save directory (optional):" Foreground="#CCCCCC"/>
                                            <Grid ColumnDefinitions="*,Auto">
                                                <TextBox Watermark="Leave empty to auto-detect" Background="#1E1E1E"/>
                                                <Button Grid.Column="1" Content="Browse..." Margin="5,0,0,0"/>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!-- Advanced Settings -->
                                <Border Background="#252526" Padding="15" CornerRadius="6">
                                    <StackPanel Spacing="12">
                                        <TextBlock Text="Advanced Settings" FontSize="16" FontWeight="SemiBold"/>
                                        <CheckBox Content="Enable verbose logging"/>
                                        <CheckBox Content="Keep temporary files for debugging"/>
                                        <CheckBox Content="Handle game launcher (track parent process)"/>
                                        <Button Content="View Blacklist Filters" Padding="10,6" HorizontalAlignment="Left"/>
                                        <Button Content="Export Configuration" Padding="10,6" HorizontalAlignment="Left"/>
                                    </StackPanel>
                                </Border>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>

                    <!-- Activity Log Tab -->
                    <TabItem Header="📋 Activity Log">
                        <Grid RowDefinitions="Auto,*">
                            <Border Grid.Row="0" Background="#252526" Padding="15" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="Recent tracking and sync activity" Foreground="#CCCCCC" VerticalAlignment="Center"/>
                                    <Button Content="Clear Log" Padding="10,6"/>
                                </Grid>
                            </Border>
                            
                            <ScrollViewer Grid.Row="1">
                                <StackPanel Margin="15" Spacing="5">
                                    <!-- Activity log entries will be populated here -->
                                    <TextBlock Text="No activity yet" 
                                             Foreground="#858585" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center"
                                             Margin="0,50,0,0"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </TabItem>

                </TabControl>

            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,8">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="SaveTracker Desktop v1.0" Foreground="White" FontWeight="SemiBold"/>
                    <Separator Width="1" Background="White" Opacity="0.3"/>
                    <TextBlock Text="Platform: Windows" Foreground="White"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="Rclone: Not Connected" Foreground="White"/>
                    <TextBlock Text="•" Foreground="White"/>
                    <TextBlock Name="GamesCountTxt" Text="0 games tracked" Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>

    <Window.Styles>
        <Style Selector="Button.MenuButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
        </Style>
        <Style Selector="Button.MenuButton:pointerover">
            <Setter Property="Background" Value="#3F3F46"/>
        </Style>
        
        <Style Selector="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2D2D30"/>
        </Style>
        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
            <Setter Property="Background" Value="#3F3F46"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#505050"/>
        </Style>
        
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
        
        <Style Selector="TabItem">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="ComboBox">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
    </Window.Styles>

</Window>