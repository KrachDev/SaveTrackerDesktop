<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="SaveTracker.Views.Dialog.UC_ImportFromPlaynite"
        xmlns:vm="clr-namespace:SaveTracker.Views.Dialog"
        x:DataType="vm:UC_ImportFromPlaynite_ViewModel"
        Title="Import from Playnite"
        Width="900" Height="700"
        MinWidth="700" MinHeight="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner"
        CanResize="True">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20,15">
            <StackPanel>
                <TextBlock Text="Import Games from Playnite" FontSize="20" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Import your Playnite game library into SaveTracker" 
                          FontSize="12" Foreground="#858585" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Import Options -->
        <Border Grid.Row="1" Background="#252526" Padding="20,15" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <StackPanel Spacing="20">
                
                <!-- Method 1: JSON Import (Primary) -->
                <StackPanel Spacing="10">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Method 1: Import from JSON Export" FontSize="15" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                        <Border Background="#16825D" CornerRadius="3" Padding="6,2">
                            <TextBlock Text="RECOMMENDED" FontSize="10" FontWeight="Bold" Foreground="White"/>
                        </Border>
                    </StackPanel>
                    
                    <Border Background="#2D2D30" CornerRadius="6" Padding="15" BorderBrush="#3F3F46" BorderThickness="1">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Spacing="5">
                                <TextBlock Text="How to export your library:" FontWeight="Bold" Foreground="#CCCCCC"/>
                                <TextBlock Text="1. Install 'JsonLibraryImportExport' extension in Playnite" Foreground="#999999" FontSize="12"/>
                                <TextBlock Text="2. In Playnite: Extensions -> JSON Import/Export -> Export" Foreground="#999999" FontSize="12"/>
                                <TextBlock Text="3. Select the exported .json file below" Foreground="#999999" FontSize="12"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1"
                                    Name="ImportJsonButton" 
                                    Click="OnImportJson"
                                    Content="Select JSON File"
                                    Padding="20,10"
                                    Margin="20,0,0,0"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    Background="#0E639C"
                                    VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>

                <!-- Method 2: Direct DB Read (REMOVED) -->
                <!-- Legacy code removed upon user request -->

                <TextBlock Text="{Binding StatusMessage}" 
                          FontSize="12" 
                          Foreground="#4EC9B0"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Tabs for Installed and Not Installed Games -->
        <TabControl Grid.Row="2" Background="#1E1E1E" Padding="0">
            <!-- Installed Games Tab -->
            <TabItem Header="Installed Games">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="âœ” Installed Games"/>
                            <TextBlock Text="{Binding $parent[TabControl].DataContext.InstalledGamesCount, StringFormat='({0})'}" 
                                      Foreground="#858585"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <Border Background="#1E1E1E" Padding="10">
                    <Grid RowDefinitions="Auto,*">
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="10,5">
                            <CheckBox Name="SelectAllInstalled" 
                                     Click="OnSelectAllInstalled"
                                     Content="Select All" 
                                     Foreground="#CCCCCC"/>
                            <TextBlock Text="|" Foreground="#555555" VerticalAlignment="Center"/>
                            <Button Click="OnDeselectAllInstalled" 
                                   Content="Deselect All" 
                                   Background="Transparent" 
                                   Foreground="#858585" 
                                   Padding="5,2"/>
                        </StackPanel>
                        
                        <ScrollViewer Grid.Row="1">
                            <ItemsControl ItemsSource="{Binding InstalledGames}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#252526" 
                                               Margin="5" 
                                               Padding="12" 
                                               CornerRadius="4"
                                               BorderBrush="#3F3F46"
                                               BorderThickness="1">
                                            <Grid ColumnDefinitions="Auto,*">
                                                <CheckBox Grid.Column="0" 
                                                         IsChecked="{Binding IsSelected}" 
                                                         VerticalAlignment="Center"
                                                         Margin="0,0,12,0"/>
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}" 
                                                              FontWeight="SemiBold" 
                                                              Foreground="White"
                                                              FontSize="13"/>
                                                    <TextBlock Text="{Binding InstallDirectory}" 
                                                              FontSize="11" 
                                                              Foreground="#858585"
                                                              Margin="0,3,0,0"/>
                                                    <TextBlock Text="{Binding ExecutablePath, StringFormat='Exe: {0}'}" 
                                                              FontSize="10" 
                                                              Foreground="#658585"
                                                              Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Not Installed Games Tab -->
            <TabItem Header="Not Installed Games">
                <TabItem.HeaderTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="âŒ Not Installed"/>
                            <TextBlock Text="{Binding $parent[TabControl].DataContext.NotInstalledGamesCount, StringFormat='({0})'}" 
                                      Foreground="#858585"/>
                        </StackPanel>
                    </DataTemplate>
                </TabItem.HeaderTemplate>
                <Border Background="#1E1E1E" Padding="10">
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding NotInstalledGames}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252526" 
                                           Margin="5" 
                                           Padding="12" 
                                           CornerRadius="4"
                                           BorderBrush="#3F3F46"
                                           BorderThickness="1"
                                           Opacity="0.7">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" 
                                                      FontWeight="SemiBold" 
                                                      Foreground="#858585"
                                                      FontSize="13"/>
                                            <TextBlock Text="Game not installed" 
                                                      FontSize="11" 
                                                      Foreground="#555555"
                                                      FontStyle="Italic"
                                                      Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Bottom Action Buttons -->
        <Border Grid.Row="3" Background="#252526" Padding="20,15" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto,Auto">
                <StackPanel Orientation="Horizontal" Spacing="5">
                    <TextBlock Text="ðŸ’¡" FontSize="14"/>
                    <TextBlock VerticalAlignment="Center" 
                              FontSize="11" 
                              Foreground="#858585">
                        <Run Text="Select games from the 'Installed Games' tab and click"/>
                        <Run Text="Add Selected" FontWeight="Bold"/>
                    </TextBlock>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Name="CancelButton"
                        Click="OnCancel"
                        Content="Cancel" 
                        Padding="20,10" 
                        Margin="0,0,10,0"
                        Background="#3F3F46"
                        Foreground="#CCCCCC"
                        Width="100"/>
                
                <Button Grid.Column="2" 
                        Name="AddSelectedButton"
                        Click="OnAddSelected"
                        Content="Add Selected" 
                        Padding="20,10"
                        Background="#0E639C"
                        Foreground="White"
                        Width="140"
                        FontWeight="SemiBold"/>
            </Grid>
        </Border>

    </Grid>

    <Window.Styles>
        <Style Selector="TabItem">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,10"/>
        </Style>
        <Style Selector="TabItem:selected">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button:pointerover">
            <Setter Property="Background" Value="#505050"/>
        </Style>
        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>
        
        <Style Selector="TextBox">
            <Setter Property="Background" Value="#3F3F46"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>
        
        <Style Selector="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
    </Window.Styles>

</Window>
