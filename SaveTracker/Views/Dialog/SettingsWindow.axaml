<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SaveTracker.ViewModels"
        mc:Ignorable="d" 
        d:DesignWidth="900" 
        d:DesignHeight="650"
        x:Class="SaveTracker.Views.Dialog.SettingsWindow"
        x:DataType="vm:SettingsViewModel"
        Title="Settings"
        Width="900" 
        Height="650"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="Full"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Application Settings" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
            <TextBlock Text="Configure SaveTracker preferences and behavior" 
                       FontSize="13" 
                       Foreground="#858585"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" Background="#252526" BorderBrush="#3F3F46">
            
            <!-- General Settings Tab -->
            <TabItem Header="âš™ï¸ General">
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="20" Margin="0,0,0,20">
                        
                        <!-- Tracking Settings -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Tracking" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="12" Margin="10">
                                <StackPanel Spacing="8">
                                    <CheckBox IsChecked="{Binding EnableAutomaticTracking}" 
                                              Content="Enable Game Watcher"
                                              Foreground="#CCCCCC"/>
                                    <TextBlock Text="Automatically detects when configured games are launched." 
                                               FontSize="11" 
                                               Foreground="#666666"
                                               Margin="28,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Startup Settings -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Startup" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="12" Margin="10">
                                <CheckBox IsChecked="{Binding StartWithWindows}" 
                                          Content="Start with Windows"
                                          Foreground="#CCCCCC"/>
                                
                                <CheckBox IsChecked="{Binding StartMinimized}" 
                                          Content="Start Minimized to Tray"
                                          Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Expander>

                        <!-- Interface Settings -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Interface" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="12" Margin="10">
                                <CheckBox IsChecked="{Binding ShowDebugConsole}" 
                                          Content="Show Debug Console"
                                          Foreground="#CCCCCC"/>
                                
                                <StackPanel Spacing="8">
                                    <CheckBox IsChecked="{Binding EnableNotifications}" 
                                              Content="Enable Notifications"
                                              Foreground="#CCCCCC"/>
                                    <TextBlock Text="Show in-app and Windows toast notifications for tracking and upload events." 
                                               FontSize="11" 
                                               Foreground="#666666"
                                               Margin="28,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Analytics Tab -->
            <TabItem Header="ðŸ“Š Analytics">
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="20" Margin="0,0,0,20">
                        
                        <!-- Privacy Notice -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Privacy-Focused Analytics" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="12" Margin="10">
                                <StackPanel Spacing="8">
                                    <CheckBox IsChecked="{Binding EnableAnalytics}" 
                                              Content="Enable Anonymous Analytics"
                                              Foreground="#CCCCCC"/>
                                    <TextBlock Text="Collects anonymous usage statistics (device ID, game names, file counts). NO personal information, paths, or file names are collected. Enabled by default, opt-out available." 
                                               FontSize="11" 
                                               Foreground="#666666"
                                               TextWrapping="Wrap"
                                               Margin="28,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- Analytics Data -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Your Analytics Data" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="15" Margin="10">
                                <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                                    <TextBlock Grid.Row="0" 
                                               Grid.Column="0"
                                               Text="Device ID:" 
                                               Foreground="#CCCCCC" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"/>
                                    <TextBlock Grid.Row="0" 
                                               Grid.Column="1"
                                               Text="{Binding AnalyticsDeviceId}" 
                                               Foreground="#858585" 
                                               FontFamily="Consolas"
                                               FontSize="11"
                                               VerticalAlignment="Center"/>
                                    
                                    <TextBlock Grid.Row="1" 
                                               Grid.Column="0"
                                               Text="Summary:" 
                                               Foreground="#CCCCCC" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"/>
                                    <TextBlock Grid.Row="1" 
                                               Grid.Column="1"
                                               Text="{Binding AnalyticsSummary}" 
                                               Foreground="#858585" 
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Separator Background="#3F3F46" Margin="0,5"/>
                                
                                <StackPanel Orientation="Horizontal" Spacing="10">
                                    <Button Content="View Detailed Data" 
                                            Command="{Binding ViewAnalyticsDataCommand}"
                                            Background="#0EA5E9"
                                            Foreground="White"
                                            Padding="15,10"
                                            CornerRadius="4"
                                            Cursor="Hand"/>
                                    <Button Content="Clear All Data" 
                                            Command="{Binding ClearAnalyticsDataCommand}"
                                            Background="#EF4444"
                                            Foreground="White"
                                            Padding="15,10"
                                            CornerRadius="4"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>

                        <!-- What's Collected -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="What We Collect" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="12" Margin="10">
                                <StackPanel Spacing="8">
									<TextBlock Text="âš ï¸"
									  FontSize="20"
									  VerticalAlignment="Top"/>
									<StackPanel Grid.Column="1"
											   VerticalAlignment="Center"
											   Spacing="4">
										<TextBlock Text="Important Notice!"
												   FontWeight="Bold"
												   Foreground="#E3A008"
												   FontSize="13"/>
										<TextBlock Text="The data I collect is purely statistical. You can opt out using the checkbox above and delete your data using the Delete button."
												   FontSize="11"
												   Foreground="#CCCCCC"
												   TextWrapping="WrapWithOverflow"/>
									</StackPanel>
                                    <TextBlock Text="âœ… Anonymous device ID (SHA256 hash)" 
                                               FontSize="12" 
                                               Foreground="#10B981"/>
                                    <TextBlock Text="âœ… Game names (no paths or directories)" 
                                               FontSize="12" 
                                               Foreground="#10B981"/>
                                    <TextBlock Text="âœ… Tracked File counts (no file names or paths)" 
                                               FontSize="12" 
                                               Foreground="#10B981"/>
                                    
                                    <Separator Background="#3F3F46" Margin="0,10"/>
                                    
                                    <TextBlock Text="âŒ NO usernames or personal information" 
                                               FontSize="12" 
                                               Foreground="#EF4444"/>
                                    <TextBlock Text="âŒ NO file paths or file names" 
                                               FontSize="12" 
                                               Foreground="#EF4444"/>
                                    <TextBlock Text="âŒ NO cloud provider details" 
                                               FontSize="12" 
                                               Foreground="#EF4444"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Updates Tab -->
            <TabItem Header="ðŸ”„ Updates">
                <ScrollViewer  VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="20" Margin="0,0,0,20">
                        
                        <!-- Update Settings -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Automatic Updates" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="12" Margin="10">
                                <CheckBox IsChecked="{Binding CheckForUpdatesOnStartup}" 
                                          Content="Check for updates on startup"
                                          Foreground="#CCCCCC"/>
                            </StackPanel>
                        </Expander>

                        <!-- Current Version -->
                        <Expander IsExpanded="True" 
                                  Background="#2A2A2A" 
                                  CornerRadius="8"
                                  BorderThickness="0"
                                  HorizontalAlignment="Stretch">
                            <Expander.Header>
                                <TextBlock Text="Version Information" 
                                           FontSize="16" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Expander.Header>
                            <StackPanel Spacing="15" Margin="10">
                                <Grid ColumnDefinitions="Auto,*">
                                    <TextBlock Grid.Column="0"
                                               Text="Current Version:" 
                                               Foreground="#CCCCCC" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding CurrentVersion}" 
                                               Foreground="#0EA5E9" 
                                               FontWeight="SemiBold" 
                                               VerticalAlignment="Center"/>
                                </Grid>
                                
                                <Button Content="Check for Updates" 
                                        Command="{Binding CheckForUpdatesCommand}"
                                        IsEnabled="{Binding !IsCheckingForUpdates}"
                                        Background="#0EA5E9"
                                        Foreground="White"
                                        Padding="15,10"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        HorizontalAlignment="Left"/>
                                
                                <TextBlock Text="{Binding UpdateVersion}" 
                                           Foreground="#CCCCCC"
                                           FontWeight="SemiBold"
                                           Margin="0,5,0,0"
                                           IsVisible="{Binding UpdateVersion, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                            </StackPanel>
                        </Expander>

                        <!-- Install Update -->
                        <Border Background="#2A2A2A" 
                                Padding="20" 
                                CornerRadius="8"
                                BorderBrush="#10B981"
                                BorderThickness="2"
                                IsVisible="{Binding UpdateAvailable}">
                            <StackPanel Spacing="15">
                                <TextBlock Text="ðŸš€ Update Available!" 
                                           FontSize="18" 
                                           FontWeight="Bold" 
                                           Foreground="#10B981"/>
                                
                                <TextBlock Text="A new version of SaveTracker is ready to install." 
                                           FontSize="13" 
                                           Foreground="#CCCCCC"/>
                                
                                <Button Content="Install Update Now" 
                                        Command="{Binding InstallUpdateCommand}"
                                        Background="#10B981"
                                        Foreground="White"
                                        Padding="20,12"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        CornerRadius="4"
                                        Cursor="Hand"
                                        HorizontalAlignment="Stretch"/>
                            </StackPanel>
                        </Border>
                        
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

        </TabControl>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            
            <Button Content="Save &amp; Close" 
                    Command="{Binding SaveSettingsCommand}" 
                    Click="SaveButton_Click" 
                    Background="#10B981"
                    Foreground="White"
                    Padding="20,10"
                    CornerRadius="4"
                    Cursor="Hand"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click" 
                    Background="#3F3F46"
                    Foreground="#CCCCCC"
                    Padding="15,10"
                    CornerRadius="4"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>