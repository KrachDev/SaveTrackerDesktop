<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:SaveTracker.ViewModels"
        xmlns:md="https://github.com/whistyun/Markdown.Avalonia"
        mc:Ignorable="d" 
        d:DesignWidth="700" 
        d:DesignHeight="600"
        x:Class="SaveTracker.Views.Dialog.AnnouncementWindow"
        x:DataType="vm:AnnouncementViewModel"
        Title="What's New in SaveTracker"
        Width="700" 
        Height="600"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="Full"
        Background="#1E1E1E"
        Topmost="True">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#252526" 
                Padding="30,20"
                BorderBrush="#3F3F46"
                BorderThickness="0,0,0,1">
            <StackPanel>
                <TextBlock Text="ðŸŽ‰ What's New" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Important updates and changes in SaveTracker" 
                           FontSize="13" 
                           Foreground="#858585"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" 
                Background="#1E1E1E" 
                Padding="30,20">
            <Border Background="#2A2A2A" 
                    Padding="25" 
                    CornerRadius="8"
                    BorderBrush="#3F3F46"
                    BorderThickness="1">
                <md:MarkdownScrollViewer 
                    Markdown="{Binding AnnouncementContent}">
                    <md:MarkdownScrollViewer.Styles>
                        <Style Selector="TextBlock">
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                        <Style Selector="TextBlock.Heading1">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="24"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Margin" Value="0,0,0,12"/>
                        </Style>
                        <Style Selector="TextBlock.Heading2">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontSize" Value="20"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Margin" Value="0,16,0,8"/>
                        </Style>
                        <Style Selector="TextBlock.Heading3">
                            <Setter Property="Foreground" Value="#E0E0E0"/>
                            <Setter Property="FontSize" Value="16"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Margin" Value="0,12,0,6"/>
                        </Style>
                        <Style Selector="Border.CodeBlock">
                            <Setter Property="Background" Value="#1E1E1E"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="CornerRadius" Value="4"/>
                            <Setter Property="Padding" Value="12"/>
                            <Setter Property="Margin" Value="0,8,0,8"/>
                        </Style>
                    </md:MarkdownScrollViewer.Styles>
                </md:MarkdownScrollViewer>
            </Border>
        </Border>

        <!-- Footer with Checkbox and Close Button -->
        <Border Grid.Row="2" 
                Background="#252526" 
                Padding="30,20"
                BorderBrush="#3F3F46"
                BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="*,Auto">
                <!-- Never Show Again Checkbox -->
                <CheckBox Grid.Column="0"
                          IsChecked="{Binding NeverShowAgain}" 
                          Content="Don't show again for this version"
                          Foreground="#CCCCCC"
                          VerticalAlignment="Center">
                    <CheckBox.Styles>
                        <Style Selector="CheckBox">
                            <Setter Property="FontSize" Value="13"/>
                        </Style>
                    </CheckBox.Styles>
                </CheckBox>

                <!-- Close Button -->
                <Button Grid.Column="1"
                        Content="Close" 
                        Click="CloseButton_Click" 
                        Background="#0EA5E9"
                        Foreground="White"
                        Padding="30,12"
                        FontSize="14"
                        FontWeight="SemiBold"
                        CornerRadius="6"
                        Cursor="Hand">
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#0284C7"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
